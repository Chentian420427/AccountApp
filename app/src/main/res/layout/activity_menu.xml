<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/menu_news"
            android:background="@drawable/stat_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_message_black_24dp"
                android:id="@+id/general_statistics_icon"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_toRightOf="@+id/general_statistics_icon"
                android:text="新闻"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/menu_happy"
            android:background="@drawable/stat_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mood_black_24dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:id="@+id/statistic_total_icon"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_toRightOf="@+id/statistic_total_icon"
                android:text="笑话"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/menu_weather"
            android:background="@drawable/stat_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_toRightOf="@+id/general_statistics_icon"
                android:text="天气查询"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/menu_today"
            android:background="@drawable/stat_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_today_black_24dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_toRightOf="@+id/statistic_total_icon"
                android:text="历史今天"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/menu_about"
            android:background="@drawable/stat_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_perm_identity_black_24dp"
                android:layout_gravity="center"
                android:id="@+id/statistic_most_expenditure_category_icon"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/statistic_most_expenditure_category_icon"
                android:text="关于"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/menu_more"
            android:background="@drawable/stat_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menu_black_24dp"
                android:id="@+id/statistic_income_recent_months_icon"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/statistic_income_recent_months_icon"
                android:text="更多"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>


    </LinearLayout>





</LinearLayout>